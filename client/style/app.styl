@require "variables"

@font-face
  font-family Sofia
  font-style normal
  src url(font/SofiaProLight.otf)

body, html
  font-family Sofia
  padding: 0
  margin: 0

.title
  font-size: fontXXL px
  color: #212121

.subtitle
  font-size: fontXL px
  color: #c1c1c1
  margin-top: 10px

.no-margin
  margin: 0px

.no-padding
  padding: 0px

a
  color: lightDark
  text-decoration: none

a:hover
  text-decoration: none

.image-swiper-button
  box-shadow: none
  -webkit-transition: box-shadow 0.3s
  -moz-transition: box-shadow 0.3s
  -ms-transition: box-shadow 0.3s
  -o-transition: box-shadow 0.3s
  transition: box-shadow 0.3s
  display: inline-block
  border-radius: 50px
  border: 5px solid #F0F0F0
  margin-top: 30px
  cursor: pointer

.image-swiper-button:hover
  box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.2)

.spinner-path
  width: 40
  stroke-dasharray: 1000
  stroke-dashoffset: 1000
  animation: dash 2.5s linear alternate infinite


@keyframes dash
  0% {
    stroke-dashoffset: 1000;
    fill: white;
  }

  5% {
    stroke-dashoffset: 1000;
    fill: white;
  }

  90% {
    stroke-dashoffset: 500;
    fill: lightBlue;
  }

  100% {
    stroke-dashoffset: 500;
    fill: lightBlue;
  }
