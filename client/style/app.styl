@require "variables"

@font-face
  font-family Sofia
  font-style normal
  src url(font/SofiaProLight.otf)

body, html
  font-family Sofia
  padding: 0
  margin: 0

.title
  font-size: fontXXL px
  color: #212121

.subtitle
  font-size: fontXL px
  color: #c1c1c1
  margin-top: 10px

.no-margin
  margin: 0px

.no-padding
  padding: 0px

a
  color: lightDark

.image-swiper-button
  box-shadow: none
  -webkit-transition: box-shadow 0.3s
  display: inline-block
  border-radius: 50px
  border: 5px solid #F0F0F0
  margin-top: 30px
  cursor: pointer

.image-swiper-button:hover
  box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.2)
